/* pages/index/index.wxss */
.popup-box{
    position: absolute;
    z-index: 99;
    top: 0;
    background-color: rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 100%;
  }

.info-top{
    position: fixed;
    z-index: 999;
    width: 100%;
    top: 0;
    background-color: white;
    border-bottom-left-radius: 5rpx;
    border-bottom-right-radius: 5rpx;
  }
.row-info{
    height: 330rpx;
    font-size: 34rpx;
}
.row-btn view{
    flex: 1;
    text-align: center;
    margin: 20rpx 10%;
    padding: 12rpx 0;
    font-size: 32rpx;
    border-radius: 10rpx;
  }
.left-btn{
    background-color: #f1f1f1;
    color: #33ccff;
    font-weight: bold;
  }
