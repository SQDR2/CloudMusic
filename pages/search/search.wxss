.searchContainer{
    padding: 0 20rpx;
}
/* 头部搜索框 */
.header{
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0;
}
.searchInput{
    position: relative;
    flex: 1;
    background-color: rgba(237, 237, 237, 0.3);
    border-radius: 30rpx;
}
.cancel{
    width: 100rpx;
    text-align: center;
}
.searchicon{
    position: absolute;
    left:15rpx
}
.searchInput input{
    margin-left: 50rpx;
    height: 60rpx;
}
.clear{
    position: absolute;
    right: 30rpx;
    top: 0;
    font-size: 30rpx;
    z-index: 10;
}
.searchInput .placeholder{
    /* color: #d43c33; */
    font-size: 28rpx;
}
/* 热搜榜 */
.hotContainer .title{
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}
.hotlist{
    display: flex;
    flex-wrap: wrap;
}
.hotlist .hot{
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 27rpx;
}
.hotlist .blod{
    font-weight: bold;
}
.hot .order{
    margin: 0 10rpx;    
}
.hotlist .iconimg{
    width: 35rpx;
    height: 20rpx;
    line-height: 20rpx;
}
/* 搜索内容区 */
.searchContent{
    color: #d43c33;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid #d43c33;
}
.seaarchitem{
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}
.seaarchitem .content{
    flex: 1;
    margin-left: 20rpx;
    font-size: 26rpx;
    border-bottom: 1rpx solid #eee;
}
/* 历史记录 */
.history{
    position: relative;
    display: flex;
    flex-wrap: wrap;
    line-height: 50rpx;
    margin:  20rpx 0; 
}
.history .title{
    font-size: 28rpx;
    height: 50rpx;
}
.history .histroyitem{
    height: 50rpx;
    font-size: 26rpx;
    background: #ededed;
    margin-left: 20rpx;
    padding:  0 30rpx;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}
.history .delete{
    position: absolute;
    bottom: 10rpx;
    right: 15rpx;
    font-size: 36rpx;
    z-index: 100;
}